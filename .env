# 服务配置
APP_ENV=development
PORT=8088
DEBUG=true

# LLM 配置（Ollama 本地）
LLM_PROVIDER=ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen3:8b

# 向量数据库
VECTOR_STORE_TYPE=chromadb
VECTOR_DB_PATH=./data/vectordb

# Embedding
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# 参数
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
SEARCH_TOP_K=5
MAX_ITERATIONS=10
TEMPERATURE=0.7